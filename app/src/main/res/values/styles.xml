<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButton">
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="DefaultButton.Primary">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ContactText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ContactText.Id">
        <item name="android:textColor">@color/pigeon</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DefaultText">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/default_text</item>
    </style>

    <style name="DefaultText.EmptyPlaceholder">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DefaultToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="BackgroundToolbar" parent="DefaultToolbar">
        <item name="titleTextColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ToolbarBgTheme">
        <item name="colorControlNormal">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AccentToolbar" parent="DefaultToolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

<!--    <style name="ToolbarAccentTheme" parent="Theme.DChat">-->
    <style name="ToolbarAccentTheme">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="AvatarPlaceholder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/contact_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>