<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- This one can be used to setup toolbar buttons color when used with NavComponent -->
        <item name="colorControlNormal">?attr/colorPrimaryVariant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/apple</item>
        <item name="colorSecondaryVariant">@color/leaf</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>