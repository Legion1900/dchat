{
  "name": "chat_thread",
  "mill": "/json",
  "json_schema": {
    "$id": "com.legion1900.dchat/chat_schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Chat Thread",
    "required": [
      "content_type",
      "content",
      "from_id"
    ],
    "type": "object",
    "properties": {
      "from_id": {
        "type": "string",
        "description": "Sender ID"
      },
      "content_type": {
        "type": "string",
        "enum": [
          "text",
          "photo"
        ],
        "description": "Specifies exact media type to properly tackle it"
      },
      "content": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Text message"
          },
          "media": {
            "type": ["string", "null"],
            "description": "Media file IPFS hash"
          }
        }
      }
    }
  }
}
